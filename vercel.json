{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",

  "headers": [
    {
      "source": "/(.*)",
      "headers": [

        //  Clickjacking protection
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },

        //  Modern iframe protection
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:; frame-ancestors 'none'; base-uri 'self'; form-action 'self';"
        },

        //  Prevent MIME sniffing
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },

        // Hide referrer info
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },

        //  Force HTTPS
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },

        // Block dangerous browser features
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), interest-cohort=()"
        },

        // Basic XSS protection (legacy but harmless)
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },

    // Cache static assets for speed
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
